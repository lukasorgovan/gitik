class Solution {
    public boolean isPalindrome(int x) {
        boolean result = false;
        String temp = String.valueOf(x);
        for (int i = 0; i < temp.length(); i++) {
            if (temp.charAt(i) == temp.charAt(temp.length() - 1 - i)) {
                result = true;
            } else {
                result = false;
                break;
            }                
        }
        return result;
    }
}